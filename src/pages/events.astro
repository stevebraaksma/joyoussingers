const metadata = {
  title: 'Mobile App Homepage',
};
---

<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment>
  <Fragment slot="header">
    <Header
      position="center"
      links={[
        { text: 'Home', href: '/' },
        { text: 'Events', href: '/events' },
        { text: 'Donate', href: 'https://www.giveforgoodlouisville.org/organization/Joyous-Singers' },
        { text: 'Contact', href: '/contact' },
      ]}
    />
  </Fragment>

  <!-- Features3 Widget ************** -->

  <Features4
    id="features"
    title="Events"
    subtitle="Join the Joyous Singers for a heartfelt season of spring performances across our community. Everyone is welcome!"
    tagline=""
    columns={2}
  />

  <!-- Content Widget **************** -->
  <Content
    isReversed
    items={[
      {
        title: 'Treyton Oak Towers',
        description: 'Thursday, May 8, 3:00pm',
        icon: 'tabler:wand',
      },
      {
        title: 'The Forum',
        description: 'Thursday, May 15, 2:00pm',
        icon: 'tabler:wand',
      },
      {
        title: 'Lyndon Baptist Church',
        description: 'Sunday, May 18, 2:00pm',
        icon: 'tabler:wand',
      },
      {
        title: 'Village Crossing Retirement Community',
        description: 'Tuesday, May 20, 2:00pm',
        icon: 'tabler:wand',
      },
      {
        title: 'Altenheim Senior Healthcare Facility',
        description: 'Thursday, May 22nd, 11:00am',
        icon: 'tabler:wand',
      },
    ]}
    image={{ src: '~/assets/images/2019-JS-Christmas.jpeg', alt: 'Joyous Singers in Concert' }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        May Concert Venues, Spring 2025
      </h3>
    </Fragment>
  </Content>

